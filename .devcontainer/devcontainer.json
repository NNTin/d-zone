{
  "name": "D-Zone Node.js Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspace/app",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-playwright.playwright",
        "qwtel.sqlite-viewer",
        "ms-vscode.vscode-json",
        "ms-vscode.test-adapter-converter",
        "hbenl.vscode-test-explorer",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-eslint"
      ],
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/allure-results": true,
          "**/allure-report": true,
          "**/test-results": true,
          "**/playwright-report": true
        }
      }
    }
  },

  "forwardPorts": [8080, 3000],
  "portsAttributes": {
    "8080": {
      "label": "D-Zone App",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Dev Server",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "cd /workspace/app && npm install",
  "postStartCommand": "echo 'D-Zone development environment ready! Run npm run dev to start.'",

  "remoteUser": "node",

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace/app,type=bind,consistency=cached",
    "source=dzone_node_modules,target=/workspace/node_modules,type=volume"
  ],

  "containerEnv": {
    "NODE_ENV": "development"
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
